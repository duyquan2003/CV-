<script>
    let hideTimeout;
  
    document.querySelector('.dropdown').addEventListener('mouseover', function() {
      clearTimeout(hideTimeout); // Xóa bộ đếm thời gian nếu có
      document.querySelector('.dropdown-content').style.display = 'flex'; // Hiển thị dropdown
    });
  
    document.querySelector('.dropdown').addEventListener('mouseleave', function() {
      hideTimeout = setTimeout(function() {
        document.querySelector('.dropdown-content').style.display = 'none'; // Ẩn dropdown sau 15 giây
      }, 15000); // 9000 milliseconds = 15 giây
    });
  </script>
